<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái khi được nhấn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#DDDDDD" /> <!-- Màu nền khi nhấn -->
            <corners android:radius="100dp" /> <!-- Bo tròn -->
            <stroke android:width="2dp" android:color="#AAAAAA" /> <!-- Viền khi nhấn -->
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Nền trong suốt -->
            <corners android:radius="100dp" /> <!-- Bo tròn -->
            <stroke android:width="2dp" android:color="#CCCCCC" /> <!-- Viền mặc định -->
        </shape>
    </item>

</selector>
