<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Tiêu đề Đăng nhập -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <!-- Sử dụng tài khoản để vào app -->
    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sử dụng tài khoản để vào app"
        android:textSize="14sp"
        android:textColor="#7D7D7D"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <!-- Chuyển đổi giữa số điện thoại và email -->
    <LinearLayout
        android:id="@+id/toggleLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EDEDED"
        android:layout_below="@id/tvSubTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp">

        <!-- Nút Số điện thoại -->
        <Button
            android:id="@+id/btnPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Số điện thoại"
            android:textColor="@color/black" />

        <!-- Nút Email -->
        <Button
            android:id="@+id/btnEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Ô nhập số điện thoại kèm quốc kỳ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="48dp"
        android:gravity="center_vertical"
        android:layout_below="@id/toggleLayout">

        <!-- Quốc kỳ Việt Nam -->
        <ImageView
            android:id="@+id/ivCountryFlag"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/vn"
            android:layout_marginEnd="8dp" />

        <!-- Mũi tên xuống (dropdown) -->
        <ImageView
            android:id="@+id/ivDropdownArrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/vector"
            android:layout_marginEnd="8dp" />

        <!-- Ô nhập số điện thoại -->
        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0962980230"
            android:inputType="phone"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Đường kẻ dưới Số điện thoại -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="250dp"/>

    <!-- Nút Gửi mã OTP -->
    <Button
        android:id="@+id/btnSendOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi mã OTP"
        android:backgroundTint="#3DDE00"
        android:textColor="#FFFFFF"
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="32dp"/>

    <!-- Hoặc -->
    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoặc"
        android:textSize="14sp"
        android:textColor="#7D7D7D"
        android:layout_below="@id/btnSendOTP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <!-- Đăng nhập bằng Google -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/tvOr">

        <!-- Google icon -->
        <ImageView
            android:id="@+id/btnGoogleSignInIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/google"
            android:layout_marginEnd="8dp" />

        <!-- Google Sign-In Button -->
        <Button
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="Đăng nhập bằng Google"
            android:textAlignment="center"
            android:layout_marginTop="0dp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Đăng ký mới -->
    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGoogleSignIn"
        android:text="Chưa có tài khoản? Đăng ký ngay"
        android:textColor="#FF9A00"
        android:textSize="14sp"
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"
        tools:ignore="NotSibling" />
</RelativeLayout>
