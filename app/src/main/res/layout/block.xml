<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0F2E4">

    <!-- Tiêu đề của Activity -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách chặn"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <!-- Bài Hát Bị Chặn -->
    <TextView
        android:id="@+id/blocked_songs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bài Hát Bị Chặn"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Các bài hát bị chặn sẽ bị tự động bỏ qua khi bạn phát playlist."
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="10dp"/>

    <!-- Danh sách bài hát bị chặn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bài hát 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/song_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/jack5c" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/song_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thiên Lý Ơi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/song_artist_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jack - J97"
                    android:textSize="14sp"
                    android:textColor="#757575"/>
            </LinearLayout>

            <TextView
                android:id="@+id/unblock_song_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bỏ chặn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#9C27B0"
                android:layout_gravity="end"/>
        </LinearLayout>

        <!-- Bài hát 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/song_image_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bigbang" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/song_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Still Life"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/song_artist_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIGBANG"
                    android:textSize="14sp"
                    android:textColor="#757575"/>
            </LinearLayout>

            <TextView
                android:id="@+id/unblock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bỏ chặn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#9C27B0"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Nghệ Sĩ Bị Chặn -->
    <TextView
        android:id="@+id/blocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nghệ Sĩ Bị Chặn"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Những bài hát của nghệ sĩ bị chặn sẽ bị tự động bỏ qua khi phát playlist."
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="10dp"/>

    <!-- Danh sách nghệ sĩ bị chặn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nghệ sĩ 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/artist_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_song_image2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/artist_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jack - J97"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>
            </LinearLayout>

            <TextView
                android:id="@+id/unblock_artist_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bỏ chặn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#9C27B0"
                android:layout_gravity="end"/>
        </LinearLayout>

        <!-- Nghệ sĩ 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/artist"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bigbang" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIGBANG"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>
            </LinearLayout>

            <TextView
                android:id="@+id/unblock_artist_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bỏ chặn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#9C27B0"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
