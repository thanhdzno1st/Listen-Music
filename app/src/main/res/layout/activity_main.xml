<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/music_bg">
    <RelativeLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/muitendixuong" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/phattu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phát từ"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="#B3FFFFFF">
            </TextView>
            <TextView
                android:id="@+id/goiybaihat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài hát gợi ý"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#B3FFFFFF"
                android:layout_below="@+id/phattu"
                android:layout_centerHorizontal="true">
            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goiybaihat"
                android:layout_marginTop="10dp"
                android:src="@drawable/slider"
                android:layout_gravity="center">
            </ImageView>
        </LinearLayout>
        <ImageView
            android:id="@+id/btn_ketnoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_caidat"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_outline_cast" />
        <ImageView
            android:id="@+id/btn_caidat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/more_vertical" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_menu"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rotate_noinaycoanh">
    </ImageView>
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rotate"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/name_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nơi này có anh"
            android:textColor="#FFFFFF"
            android:textSize="27sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sơn tùng MTP"
            android:textColor="#80FFFFFF"
            android:layout_below="@+id/name_music"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:layout_centerHorizontal="true">
        </TextView>
        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/uil_share"
            android:layout_marginLeft="26dp" />
        <ImageView
            android:id="@+id/btn_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/heart" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_seekbar"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/layout_title">
        <TextView
            android:id="@+id/durationPlayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:23"
            android:layout_marginStart="26dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/seekbar">
        </TextView>
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:progressTint="#FFFFFF"
            android:progressBackgroundTint="#99E0E0E0"
            android:thumbTint="#FFFFFF">
        </SeekBar>
        <TextView
            android:id="@+id/durationTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="5:34"
            android:layout_marginEnd="26dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/seekbar">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_below="@+id/layout_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_control">
        <ImageView
            android:id="@+id/btn_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_random"
            android:layout_marginLeft="26dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_pause"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/skip_next_filled" />
        <ImageView
            android:id="@+id/btn_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_pause"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/skip_previous_filled" />
        <ImageView
            android:id="@+id/btn_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/buttonplay" />
        <ImageView
            android:id="@+id/btn_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            app:srcCompat="@drawable/repeat" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_control">
        <ImageView
            android:id="@+id/btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="26dp"
            app:srcCompat="@drawable/comment" />
        <ImageView
            android:id="@+id/btn_add_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/btn_Kbps"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/add_music" />

        <Button
            android:id="@+id/btn_Kbps"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#33BD9AC9"
            android:text="128Kpbs"
            android:layout_centerVertical="true"
            android:textColor="#B3FFFFFF"
            android:textSize="15sp"></Button>
        <ImageView
            android:id="@+id/btn_dowload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btn_Kbps"
            app:srcCompat="@drawable/dowload" />
        <ImageView
            android:id="@+id/btn_danhsachphat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            app:srcCompat="@drawable/ph_playlist" />
    </RelativeLayout>
</RelativeLayout>