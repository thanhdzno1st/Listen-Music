<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".Music_Activity"> <!-- Màu nền trắng -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logologin3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xã hội hóa âm nhạc"
        android:textSize="18sp"
        android:textColor="#00C800"
        android:textStyle="bold"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
    <!-- View màu trắng dưới phần nội dung chính -->
    <View

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6DFF60"
        android:layout_below="@id/dotsLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp" />
    <!-- Mô tả dưới tiêu đề -->
    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thuận tiện chia sẻ trải nghiệm âm nhạc trong cộng đồng, giúp kết nối giữa những người yêu âm nhạc"
        android:textSize="14dp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- ViewPagerIndicator (Các chấm tròn) -->
    <LinearLayout
        android:id="@+id/dotsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/descriptionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <!-- Chấm tròn 1 -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/active_dot" /> <!-- Tạo drawable riêng cho chấm tròn -->

        <!-- Chấm tròn 2 -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/inactive_dot" />

        <!-- Chấm tròn 3 -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/inactive_dot" />
    </LinearLayout>

    <!-- Nút Đăng nhập -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FFFFFF"
        android:text="Đăng nhập"
        android:textColor="#000000"
        android:layout_below="@id/dotsLayout" />

    <!-- Nút Đăng ký tài khoản -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#000000"
        android:text="Đăng ký tài khoản"
        android:textColor="#FFFFFF"
        android:layout_below="@id/loginButton" />

</RelativeLayout>
