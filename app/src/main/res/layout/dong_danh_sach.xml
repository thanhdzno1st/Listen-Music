<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@drawable/black_rounded_background"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="26dp"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_hinh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:shapeAppearance="@style/circular_2"/>
        <LinearLayout
            android:layout_toRightOf="@+id/img_hinh"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/tv_tenbai"
                android:text="Tên bài hát"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_tentacgia"
                android:layout_below="@+id/tv_tenbai"
                android:text="Tên tác giả"
                android:textSize="14sp"
                android:textColor="#80FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/btn_add_music"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_caidat"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/add_danhsachphat" />
        <ImageView
            android:id="@+id/btn_caidat"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/more_vertical" />
    </RelativeLayout>
</RelativeLayout>