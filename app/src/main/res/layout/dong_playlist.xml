<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_playlist"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialComponents.CardView" />




    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_playlistname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lofi một chút thôi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_authorPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo bởi Music TBP"
            android:textSize="14sp"
            android:textColor="#808080" />
    </LinearLayout>
</LinearLayout>