<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F0F2E4">

    <!-- Tiêu đề của trang -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gần đây"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Mục tiêu đề "Hôm nay" -->
    <TextView
        android:id="@+id/today_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hôm nay"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_below="@id/title"
        android:layout_marginTop="16dp"/>

    <!-- Danh sách các video đã xem -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/today_title"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:dividerVertical"
            android:showDividers="middle"
            android:dividerPadding="10dp">

            <!-- Video 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/video_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/video_thumbnail_1"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_karik" /> <!-- Thay thế bằng thumbnail video -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/video_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người Lạ Ơi ! | Châu Đăng Khoa + Karik + Orange"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/video_details_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Superbrothers · 112 Tr lượt xem"
                        android:textSize="14sp"
                        android:textColor="#757575"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/video_time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21:02"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <!-- Video 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/video_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/video_thumbnail_2"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_sky" /> <!-- Thay thế bằng thumbnail video -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/video_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buông Đôi Tay Nhau Ra | Sơn Tùng MTP"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/video_details_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sơn Tùng M-TP Official · 112 Tr lượt xem"
                        android:textSize="14sp"
                        android:textColor="#757575"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/video_time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:59"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <!-- Video 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/video_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/video_thumbnail_3"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_datg" /> <!-- Thay thế bằng thumbnail video -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/video_title_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bánh Mì Không - ĐạtG x DuUyên | OFFICIAL MV"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/video_details_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DatG Music · 112 Tr lượt xem"
                        android:textSize="14sp"
                        android:textColor="#757575"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/video_time_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:33"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <!-- Video 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/video_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/video_thumbnail_4"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_min" /> <!-- Thay thế bằng thumbnail video -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/video_title_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MIN - Có Em Chờ ft. Mr A (Official MV)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/video_details_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MIN OFFICIAL · 118 Tr lượt xem"
                        android:textSize="14sp"
                        android:textColor="#757575"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/video_time_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:04"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <!-- Video 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/video_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/video_thumbnail_5"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_sky2" /> <!-- Thay thế bằng thumbnail video -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/video_title_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chạy Ngay Đi | OFFICIAL MUSIC VIDEO | Sơn Tùng M-TP"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/video_details_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sơn Tùng M-TP Official · 143 Tr lượt xem"
                        android:textSize="14sp"
                        android:textColor="#757575"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/video_time_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:50"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <!-- Video 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/video_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/video_thumbnail_6"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_bray" /> <!-- Thay thế bằng thumbnail video -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/video_title_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cao Ốc 20 | B RAY x DatG (ft MASEW x K-ICM) | MV OFFICIAL"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/video_details_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EvB Records · 77 Tr lượt xem"
                        android:textSize="14sp"
                        android:textColor="#757575"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/video_time_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:15"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_gravity="end"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
