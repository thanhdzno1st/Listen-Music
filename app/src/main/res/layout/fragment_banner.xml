    tools:context=".Activity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.viewpager.widget.ViewPager
            android:layout_marginHorizontal="50px"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/viewpager_banner">
        </androidx.viewpager.widget.ViewPager>
        <me.relex.circleindicator.CircleIndicator
            app:ci_drawable="@drawable/circle_radius"
            app:ci_drawable_unselected="@drawable/circle_radius_unselect"
            android:id="@+id/indicatordefault"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/viewpager_banner"
            android:layout_width="wrap_content"
            android:layout_height="13dp">
        </me.relex.circleindicator.CircleIndicator>
    </RelativeLayout>
